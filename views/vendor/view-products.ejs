<head>
    <link rel="stylesheet" href="/css/view-product.css">
  </head>
  <body>
    <h1>Products</h1>
    <div class="product-display">
    <table class="product-display-table">
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Categories</th>
        <th>Update</th>
        <th>Delete</th>
      </tr>
      <% products.forEach(function(product) { %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.description %></td>
          <td><%= product.categories %></td>
          <td><a href="/product/<%= product.id %>/update">Update</a> </td>
          <td><a href="/product/<%= product.id %>/delete">Delete</a></td>
        </tr>
      <% }); %>
    </table>
    </div>
  </body>